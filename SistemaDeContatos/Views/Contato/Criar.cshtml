@model ContatoModel


@{
    ViewData["Title"] = "Criar contato";
}
<div class="text-center">
    <h1 class="display 4"> Registrar Contato</h1>
</div>
<form asp-controller="Contato" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Insira o nome do contato">
        @Html.ValidationMessageFor( x => x.Name)
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Insira o e-mail do contato">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label for="numero">Número</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Insira o número do contato">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>

    <button type="submit" class="btn btn-primary ">Adicionar contato</button>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>

