@model ContatoModel
@{
    ViewData["Title"] = "Apagar contato";
}
<div class="text-center">
    <h3>Você tem certeza que quer apagar o contato (@Model.Name) ?</h3>
</div>
<a class="btn btn-danger"role="button"  asp-controller="Contato" asp-action="Index">Não </a>
<a class="btn btn-success"role="button" asp-controller="Contato" asp-action="Apagar">Sim </a>